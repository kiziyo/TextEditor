<Window x:Class="vin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vin"
        mc:Ignorable="d"
        Title="vin" Height="480" Width="640" Foreground="White" Loaded="OnLoad" KeyDown="OnKeyDown" Drop="Window_Drop" AllowDrop="True" DragEnter="Window_DragEnter" DragLeave="Window_DragLeave" DragOver="Window_DragOver" PreviewDragOver="Window_PreviewDragOver" ResizeMode="CanResizeWithGrip" MouseWheel="Window_MouseWheel" KeyUp="Window_KeyUp" PreviewMouseWheel="Window_PreviewMouseWheel" Icon="App.ico">
