        <TextBox Name="text_area" Margin="0,0,0,18" Background="Black" Foreground="White" FontFamily="Meiryo UI" AcceptsReturn="True" AcceptsTab="True" BorderThickness="0" IsTabStop="False" FontSize="14" TextWrapping="Wrap" Padding="10" HorizontalScrollBarVisibility="Disabled" MouseWheel="Window_MouseWheel" VerticalScrollBarVisibility="Auto"/>
        <TextBlock Name="current_filepath" TextWrapping="Wrap" Text="new file" Padding="5,0" VerticalAlignment="Bottom" FontFamily="Meiryo UI" FontSize="14" Foreground="Gray"/>
    </Grid>
</Window>
